{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "esModuleInterop": true,
    "files": true
  }
}
