<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.backend2.dao.ClickMapper">

    <resultMap type="com.example.backend2.entity.Click" id="ClickMap">
        <result property="activityId" column="activity_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="time" column="time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ClickMap">
        select activity_id,
               user_id,
               time
        from click
        where activity_id = #{activityId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ClickMap">
        select
        activity_id, user_id, time
        from click
        <where>
            <if test="activityId != null">
                and activity_id = #{activityId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from click
        <where>
            <if test="activityId != null">
                and activity_id = #{activityId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="activityId" useGeneratedKeys="true">
        insert into click(time)
        values (#{time})
    </insert>

    <insert id="insertBatch" keyProperty="activityId" useGeneratedKeys="true">
        insert into click(time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.time})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="activityId" useGeneratedKeys="true">
        insert into click(time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.time})
        </foreach>
        on duplicate key update
        time = values(time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update click
        <set>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where activity_id = #{activityId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from click
        where activity_id = #{activityId}
    </delete>

</mapper>

